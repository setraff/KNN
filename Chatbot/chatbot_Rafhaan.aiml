<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    <!--CATEGORY 1: WHAT IS * -->
    <category>
        <pattern>WHAT IS *</pattern>
        <template>
            <think><set name="r1"><star/></set></think>
            <condition name="r1" value="long dash term knowledge">
                Long-term knowledge is valid every time a programme is run.
            </condition>
            <condition name="r1" value="short dash term knowledge">
                Short-term knowledge is only valid for a particular instance or run of a programme.
            </condition>
            <condition name="r1" value="generic knowledge">
                Generic knowledge is relevant to more than one application or domain.
            </condition>
            <condition name="r1" value="domain dash specific knowledge">
                Domain-specific knowledge is only applicable to one specific application or domain.
            </condition>
            <condition name="r1" value="a fact">
                A fact is a statement which asserts that a relationship holds for an object-subject pair.
            </condition>
            <condition name="r1" value="a rule">
                A rule is a statement that generates new knowledge by asserting that if one fact is true, then another is also true.
            </condition>
            <condition name="r1" value="a rule mybot">
                A rule is a statement that generates new knowledge by asserting that if one fact is true, then another is also true.
            </condition>
        </template>
    </category>
    <!--CATEGORY 2: * EXAMPLE * -->
    <category>
        <pattern>* EXAMPLE *</pattern>
        <template>
            <think><set name="l3"><star index="1"/></set></think>
            <think><set name="r3"><star index="2"/></set></think>
            <!--SUBCAT 1: GIVE ME AN EXAMPLE OF *-->
            <condition name="l3" value="Give me an">
                <condition name="r3" value="of long dash term generic knowledge">
                    The equations of motion used to calculate the flight-path of a bird in the game Angry Birds.
                </condition>
            </condition>
            <condition name="l3" value="Give me an">
                <condition name="r3" value="of long dash term domain dash specific knowledge">
                    The weight of the different types of birds in the game Angry Birds.
                </condition>
            </condition>
            <condition name="l3" value="Give me an">
                <condition name="r3" value="of short dash term generic knowledge">
                    The date on which a specific episode of Angry Birds is played is generic because it could also be used by another programme.
                </condition> 
            </condition>
            <condition name="l3" value="Give me an">
                <condition name="r3" value="of short dash term domain dash specific knowledge">
                    The number of birds that a user has fired in a particular episode of Angry Birds.
                </condition>  
            </condition>
            <condition name="l3" value="Give me an">
                <condition name="r3" value="of a rule">
                    If isUWEStaff(X) then hasUWEPhone (X).
                </condition> 
            </condition>
            <condition name="l3" value="Give me an">
                <condition name="r3" value="of a fact">
                    Jim Smith from UWE hasUWEPhoneNumber 0117 3287417.
                </condition> 
            </condition>
            <!--SUBCAT 2: PROVIDE AN -->
            <condition name="l3" value="Provide an">
                <condition name="r3" value="of long dash term generic knowledge">
                    The equations of motion used to calculate the flight-path of a bird in the game Angry Birds.
                </condition>
            </condition>
            <condition name="l3" value="Provide an">
                <condition name="r3" value="of long dash term domain dash specific knowledge">
                    The weight of the different types of birds in the game Angry Birds.
                </condition>
            </condition>
            <condition name="l3" value="Provide an">
                <condition name="r3" value="of short dash term generic knowledge">
                    The date on which a specific episode of Angry Birds is played is generic because it could also be used by another programme.
                </condition>
            </condition>
            <condition name="l3" value="Provide an">
                <condition name="r3" value="of short dash term domain dash specific knowledge">
                    The number of birds that a user has fired in a particular episode of Angry Birds.
                </condition>
            </condition>
            <!--SUBCAT 3: VARIATIONS-->
            <condition name="l3" value="Please provide an">
                <condition name="r3" value="of a rule">
                    If isUWEStaff(X) then hasUWEPhone (X).
                </condition>
            </condition>
            <condition name="l3" value="Please provide an">
                <condition name="r3" value="of a fact">
                    Jim Smith from UWE hasUWEPhoneNumber 0117 3287417.
                </condition>
            </condition>
            <condition name="l3" value="Please give me an">
                <condition name="r3" value="of a rule">
                    If isUWEStaff(X) then hasUWEPhone (X).
                </condition>
            </condition>
        </template>
    </category>
